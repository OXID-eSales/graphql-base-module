{
  "name": "oxid-esales/graphql-base",
  "description": "OXID eSales GraphQL base module",
  "type": "oxideshop-module",
  "keywords": ["oxid", "modules", "eShop", "GraphQL"],
  "homepage": "https://www.oxid-esales.com",
  "license": ["GPL-3.0"],
  "extra": {
    "oxideshop": {
      "target-directory": "oe/graphql-base",
      "blacklist-filter": [
        "node_modules/**/*.*",
        "src/**/*.php",
        "tests/**/*.php"
      ]
    }
  },
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "thecodingmachine/graphqlite": "^3.1",
    "lcobucci/jwt": "^3.3.1"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.5",
    "squizlabs/php_codesniffer": "^3.5.1",
    "phpcompatibility/php-compatibility": "*",
    "jakub-onderka/php-parallel-lint": "^1",
    "phpstan/phpstan": "^0.12",
    "oxid-esales/oxideshop-ce": "6.5",
    "friendsofphp/php-cs-fixer": "^2.16",
    "oxid-esales/oxideshop-unified-namespace-generator": "^v2.0.1",
    "infection/infection": "^0.13.0"
  },
  "autoload": {
    "psr-4": {
      "OxidEsales\\GraphQL\\Base\\": "src",
      "OxidEsales\\GraphQL\\Base\\Tests\\": "tests"
    }
  },
  "prefer-stable": true,
  "prefer-dist": true,
  "scripts": {
    "fix:cbf": "phpcbf",
    "fix:fixer": "php-cs-fixer fix",
    "fix": [
        "@fix:cbf",
        "@fix:fixer"
    ],
    "test:lint": "phpcs",
    "test:lint-fixer": "php-cs-fixer fix --dry-run",
    "test:syntax": "parallel-lint src/ tests/ metadata.php",
    "test:static": "phpstan analyse src/",
    "test:unit": "phpunit -c tests/phpunit.xml tests/Unit/",
    "test:infection": "infection --min-msi=58 --min-covered-msi=97",
    "test": [
      "@test:syntax",
      "@test:lint",
      "@test:lint-fixer",
      "@test:static",
      "@test:unit",
      "@test:infection"
    ],
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility",
    "post-update-cmd" : "\"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility"
  }
}
